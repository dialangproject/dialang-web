<Context>
    <Resource
         name="jdbc/dialang"
         auth="Container"
         type="javax.sql.DataSource"
         username="@dbUser@"
         password="@dbPassword@"
         driverClassName="org.postgresql.Driver"
         url="jdbc:postgresql://@dbHost@:5432/DIALANG"
         maxTotal="20"
         maxIdle="10"
         validationQuery="select 1" />
    <Resource
         name="jdbc/dialangdatacapture"
         auth="Container"
         type="javax.sql.DataSource"
         username="@dbUser@"
         password="@dbPassword@"
         driverClassName="org.postgresql.Driver"
         url="jdbc:postgresql://@dbHost@:5432/DIALANGDATACAPTURE"
         maxTotal="50"
         maxIdle="10"
         validationQuery="select 1" />
    /-->
 </Context>
