<Context>
    <Resource
         name="jdbc/dialang"
         auth="Container"
         type="javax.sql.DataSource"
         username="dialangadmin"
         password="dialangadmin"
         driverClassName="org.postgresql.Driver"
         url="jdbc:postgresql://localhost:5432/DIALANG"
         maxActive="20"
         maxIdle="10"
         validationQuery="select 1" />
    <Resource
         name="jdbc/dialangdatacapture"
         auth="Container"
         type="javax.sql.DataSource"
         username="dialangadmin"
         password="dialangadmin"
         driverClassName="org.postgresql.Driver"
         url="jdbc:postgresql://localhost:5432/DIALANGDATACAPTURE"
         maxActive="20"
         maxIdle="10"
         validationQuery="select 1" />
</Context>
