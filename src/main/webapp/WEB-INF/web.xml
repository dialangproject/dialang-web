<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
"http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">
<web-app>

  <resource-ref>
    <description>Connection Pool</description>
    <res-ref-name>jdbc/dialang</res-ref-name>
    <res-type>javax.sql.Datasource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>

  <resource-ref>
    <description>Connection Pool</description>
    <res-ref-name>jdbc/dialangdatacapture</res-ref-name>
    <res-type>javax.sql.Datasource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>

  <context-param>
    <param-name>baseContentUrl</param-name>
    <param-value>@baseContentUrl@</param-value>
  </context-param>

  <context-param>
    <param-name>configFile</param-name>
    <param-value>@configFile@</param-value>
  </context-param>

  <context-param>
    <param-name>launchUrl</param-name>
    <param-value>@ltiLaunchUrl@</param-value>
  </context-param>

  <servlet>
    <servlet-name>cache-loader</servlet-name>
    <servlet-class>org.dialang.web.servlets.CacheLoader</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <listener>
    <listener-class>org.scalatra.servlet.ScalatraListener</listener-class>
  </listener>

  <!-- 3 hour session timeout -->
  <session-config>
    <session-timeout>180</session-timeout>
    <cookie-config>
      <name>DIALANG_JSESSIONID</name>
    </cookie-config>
  </session-config>

</web-app>
