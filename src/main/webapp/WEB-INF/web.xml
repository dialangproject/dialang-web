<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
"http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">
<web-app>

    <distributable />

    <resource-ref>
        <description>Connection Pool</description>
        <res-ref-name>jdbc/dialang</res-ref-name>
        <res-type>javax.sql.Datasource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <resource-ref>
        <description>Connection Pool</description>
        <res-ref-name>jdbc/dialangdatacapture</res-ref-name>
        <res-type>javax.sql.Datasource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <servlet>
        <servlet-name>cache-loader</servlet-name>
        <servlet-class>org.dialang.web.servlets.CacheLoader</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>launch</servlet-name>
        <servlet-class>org.dialang.web.servlets.LTILaunch</servlet-class>
        <init-param>
            <param-name>staticContentRoot</param-name>
            <param-value>html/</param-value>
        </init-param>
    </servlet>

    <servlet>
        <servlet-name>setals</servlet-name>
        <servlet-class>org.dialang.web.servlets.SetALS</servlet-class>
        <init-param>
            <param-name>staticContentRoot</param-name>
            <param-value>html/</param-value>
        </init-param>
    </servlet>

    <servlet>
        <servlet-name>settls</servlet-name>
        <servlet-class>org.dialang.web.servlets.SetTLS</servlet-class>
        <init-param>
            <param-name>staticContentRoot</param-name>
            <param-value>html/</param-value>
        </init-param>
    </servlet>

    <servlet>
        <servlet-name>scorevspt</servlet-name>
        <servlet-class>org.dialang.web.servlets.ScoreVSPT</servlet-class>
        <init-param>
            <param-name>staticContentRoot</param-name>
            <param-value>html/</param-value>
        </init-param>
    </servlet>


    <servlet>
        <servlet-name>scoresa</servlet-name>
        <servlet-class>org.dialang.web.servlets.ScoreSA</servlet-class>
        <init-param>
            <param-name>staticContentRoot</param-name>
            <param-value>html/</param-value>
        </init-param>
    </servlet>

    <servlet>
        <servlet-name>starttest</servlet-name>
        <servlet-class>org.dialang.web.servlets.StartTest</servlet-class>
        <init-param>
            <param-name>staticContentRoot</param-name>
            <param-value>html/</param-value>
        </init-param>
    </servlet>

    <servlet>
        <servlet-name>submitbasket</servlet-name>
        <servlet-class>org.dialang.web.servlets.SubmitBasket</servlet-class>
        <init-param>
            <param-name>staticContentRoot</param-name>
            <param-value>html/</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>launch</servlet-name>
        <url-pattern>/launch</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>setals</servlet-name>
        <url-pattern>/setals</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>settls</servlet-name>
        <url-pattern>/settls</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>scorevspt</servlet-name>
        <url-pattern>/scorevspt</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>scoresa</servlet-name>
        <url-pattern>/scoresa</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>starttest</servlet-name>
        <url-pattern>/starttest</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>submitbasket</servlet-name>
        <url-pattern>/submitbasket</url-pattern>
    </servlet-mapping>

</web-app>
